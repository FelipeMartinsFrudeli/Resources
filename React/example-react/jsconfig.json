{
    "compilerOptions": {
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./src/",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./build",
        "paths": {
            "@components/*": ["./src/components/*"]
        },
        "sourceMap": true
    },
    "exclude": ["build", "config", "coverage", "node_modules", "public", "scripts"],
    "include": ["./src/**/*"]
}